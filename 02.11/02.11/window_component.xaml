<Window x:Class="_02._11.window_component"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_02._11"
        mc:Ignorable="d"
        Title="window_component" Height="450" Width="800">
    <Grid>
        <ComboBox x:Name="list_component" HorizontalAlignment="Left" Margin="44,64,0,0" VerticalAlignment="Top" Width="120" LostFocus="list_component_LostFocus">
            <ComboBoxItem Content="Processor"/>
            <ComboBoxItem Content="graphics card"/>
            <ComboBoxItem Content="RAM"/>
            <ComboBoxItem Content="hard disk"/>
            <ComboBoxItem Content="ssd"/>
            <ComboBoxItem Content="CPU cooler"/>
            <ComboBoxItem Content="monitor"/>
            <ComboBoxItem Content="keyboard"/>
            <ComboBoxItem Content="mous"/>

        </ComboBox>
        <TextBox x:Name="characteristiks" HorizontalAlignment="Left" Margin="321,64,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" LostFocus="characteristiks_LostFocus"/>

    </Grid>
</Window>
